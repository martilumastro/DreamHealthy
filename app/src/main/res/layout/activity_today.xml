<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/today"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/blue_background"
    android:orientation="vertical"
    tools:context=".TodayActivity">

    <!--Linear high (days of the week)-->
    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="280dp"
        app:layout_constraintTop_toBottomOf="@+id/top_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep quality"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:id="@+id/group_pie_chart_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not hours of sleep:"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp">
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/total_chart"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    />

                <View
                    android:id="@+id/pie_chart_total_view"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@color/blue_dark"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours of sleep:"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_text_total_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/group_pie_chart_total">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total hours:"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/total_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/total_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:visibility="visible"/>

        </LinearLayout>
    </LinearLayout>

    <!--Bar Button-->
    <LinearLayout
        android:id="@+id/bar_button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground">
            <Button
                android:id="@+id/menu_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/white"
                android:text="menu"
                android:scaleType="centerInside"
                android:drawableBottom="@drawable/diagrams_today"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            >
            <Button
                android:id="@+id/today_button"
                android:padding="-8dp"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/blue_background"
                android:text="today"
                android:drawableBottom="@drawable/today_active"
                android:gravity="center"
                />
        </LinearLayout>

        <!--hamburger menu-->
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground">
            <Button
                android:id="@+id/hamburger_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/white"
                android:text="menu"
                android:drawableBottom="@drawable/hamburger_off"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>