<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/blue_background"
    tools:context=".MenuActivity">

    <!--Text and image-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/backgound_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/section_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_orange"
            android:padding="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">
            <ImageView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/week"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Weekly summary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/week_page_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:drawableBottom="@drawable/right_arrow_white"
                android:gravity="center"
                android:text="weekly summary"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/section_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners_red"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">
            <ImageView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/monthly_summary"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Monthly summary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/month_page_button"
                android:layout_marginTop="4dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/red_light"
                android:drawableBottom="@drawable/right_arrow_white"
                android:gravity="center"
                android:text="monthly summary"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/section_my_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners_purple_light"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">
            <ImageView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/my_alarm_clock"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="My alarm clocks"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/my_alarm_page_button"
                android:layout_marginTop="4dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_light"
                android:drawableBottom="@drawable/right_arrow_white"
                android:gravity="center"
                android:text="my alarm clocks"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/section_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners_blue_light"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">
            <ImageView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/calendar"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Calendar"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/calendar_page_button"
                android:layout_marginTop="4dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_light"
                android:drawableBottom="@drawable/right_arrow_black"
                android:gravity="center"
                android:text="calendar"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/section_advince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">
            <ImageView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/useful_advince"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Useful advince"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/advince_page_button"
                android:layout_marginTop="4dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:drawableBottom="@drawable/right_arrow_black"
                android:gravity="center"
                android:text="useful advince"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/section_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">
            <ImageView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/settings"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Settings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/settings_page_button"
                android:layout_marginTop="4dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:drawableBottom="@drawable/right_arrow_white"
                android:gravity="center"
                android:text="settings"
                />
        </LinearLayout>

    </LinearLayout>


    <!--Bar Button-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground">
            <Button
                android:id="@+id/home_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/white"
                android:text="home"
                android:drawableBottom="@drawable/home_off"
                android:gravity="center"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground">
            <Button
                android:id="@+id/today_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/white"
                android:text="today"
                android:drawableBottom="@drawable/today_off"
                android:gravity="center"
                />
        </LinearLayout>

        <!--hamburger menu-->
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            >
            <Button
                android:id="@+id/hamburger_button_button"
                android:padding="-8dp"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/blue_background"
                android:text="hamburger"
                android:drawableBottom="@drawable/hamburger_active"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>