<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/melody_night"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/blue_background"
    tools:context=".SleepMelodiesActivity">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@+id/comandi">
        <LinearLayout
            android:id="@+id/go_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="4dp"
            android:gravity="start|center"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/go_back_bt"
                android:drawableBottom="@drawable/arrow_back_black"
                android:text="Go back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/blue_background"
                android:padding="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="start|center"
            android:orientation="horizontal"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center"
                android:background="@drawable/bottom_shape_navigation_rectangle"
                android:backgroundTint="@color/purple_light">
                <Button
                    android:id="@+id/musical_meditation"
                    android:text="Balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/purple_light"
                    android:padding="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bottom_shape_navigation_rectangle"
                android:backgroundTint="@color/purple_dark">
                <Button
                    android:id="@+id/musical_sea"
                    android:text="Sea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_dark"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bottom_shape_navigation_rectangle"
                android:backgroundTint="@color/purple_dark">
                <Button
                    android:id="@+id/musical_nature"
                    android:text="Forest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/purple_dark"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bottom_shape_navigation_rectangle"
                android:backgroundTint="@color/purple_dark">
                <Button
                    android:id="@+id/musical_night"
                    android:text="Dreams"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple_dark"
                    android:padding="4dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:layout_marginTop="50dp"
            android:padding="16dp"
            android:gravity="center"
            android:background="@drawable/borders_linear"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/borders_linear"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_zen"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/img_zen_white"
                        android:scaleType="centerInside"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Zen melody"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/borders_linear"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_lotus"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/img_lotus_flower_white"
                        android:scaleType="centerInside"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Lotus flower"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/borders_linear"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_candle"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/img_carion_white"
                        android:scaleType="centerInside"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Light_waves"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/borders_linear"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_melody_rowboat"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:src="@drawable/img_zen_rain"
                        android:scaleType="centerInside"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Rowboat in the sea"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/borders_linear"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_melody_birds"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/img_yin_yang"
                        android:scaleType="centerInside"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Sea with birds"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/borders_linear"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_strong_wind"
                        android:layout_width="120dp"
                        android:layout_height="114dp"
                        android:src="@drawable/img_moon_hands"
                        android:scaleType="centerInside"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Light_waves"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/comandi"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="4dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/previous_melody_bt"
            android:src="@drawable/icon_skip_previous_black"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button_single"
            android:contentDescription="Skip to previous"/>
        <ImageButton
            android:id="@+id/play_pause_bt"
            android:src="@drawable/icon_play_music_black"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button_single"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Play/Pause"/>
        <ImageButton
            android:id="@+id/menu2_bt"
            android:src="@drawable/icon_skip_next_black"
            android:layout_marginStart="8dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_button_single"
            android:contentDescription="Skip to next"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>